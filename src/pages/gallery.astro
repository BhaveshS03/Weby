---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ParticlesBackground from "../components/ParticlesBackground.svelte";

const posts = [
    {
        data: {
            heroImage:
                "https://assets.newatlas.com/dims4/default/17ac9ed/2147483647/strip/true/crop/1280x720+0+0/resize/1920x1080!/quality/90/?url=http%3A%2F%2Fnewatlas-brightspot.s3.amazonaws.com%2Farchive%2Fhow-to-find-beat-lynel-botw-5.jpg",
            title: "Take a look at lynel from BOTW.ðŸ˜¨",
        },
    },
];
---

<!doctype html>
<html lang="en">
    <head>
        <style>
            main {
                width: 960px;
            }
            ul {
                display: flex;
                flex-wrap: wrap;
                gap: 2rem;
                list-style-type: none;
                margin: 0;
                padding: 0;
            }
            ul li {
                width: calc(50% - 1rem);
            }
            ul li * {
                text-decoration: none;
                transition: 0.2s ease;
            }
            ul li {
                width: 100%;
                margin-bottom: 1rem;
                text-align: center;
            }
            ul li img {
                width: 100%;
            }
            ul li .title {
                font-size: 2rem;
            }
            ul li img {
                margin-bottom: 0.5rem;
                border-radius: 12px;
            }
            ul li a {
                display: block;
            }
            .title {
                margin: 0;
                color: rgb(var(--text));
                line-height: 1;
            }
            .date {
                margin: 0;
                color: rgb(var(--subtext));
            }
            ul li a:hover h4,
            ul li a:hover .date {
                color: rgb(var(--lavender));
            }
            ul a:hover img {
                box-shadow: var(--box-shadow);
            }
            @media (max-width: 720px) {
                ul {
                    gap: 0.5em;
                }
                ul li {
                    width: 100%;
                    text-align: center;
                }
                ul li .title {
                    font-size: 1.2rem;
                }
            }
        </style>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <ParticlesBackground client:only="svelte" />
            <!-- <div class="">
                <img
                    src="https://assets.newatlas.com/dims4/default/17ac9ed/2147483647/strip/true/crop/1280x720+0+0/resize/1920x1080!/quality/90/?url=http%3A%2F%2Fnewatlas-brightspot.s3.amazonaws.com%2Farchive%2Fhow-to-find-beat-lynel-botw-5.jpg"
                />
                Take a look at lynel from BOTW.ðŸ˜¨
            </div> -->
            <ul>
                {
                    posts.map((post) => (
                        <li>
                            <img
                                width={720}
                                height={360}
                                src={post.data.heroImage}
                                alt=""
                            />
                            <p class="title">{post.data.title}</p>
                        </li>
                    ))
                }
            </ul>
            <Footer />
        </main>
    </body>
</html>
