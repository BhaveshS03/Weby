---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, LinkedIn_URL, GITHUB_URL } from "../consts";
import GifHeader from "./GifHeader.svelte";
---

<header>
    <nav>
        <h2><a href="/">{SITE_TITLE}</a></h2>
        <div class="internal-links">
            <HeaderLink href="/">Home</HeaderLink>
            <HeaderLink href="/blog">Blog</HeaderLink>
            <HeaderLink href="/gallery">Gallery</HeaderLink>
        </div>
        <div class="social-links">
            <!-- <img src="/nyan-cat.gif" alt="yo" class="gif-header" /> -->
            <GifHeader />
        </div>
    </nav>
    <style>
        .gif-header {
            width: 200px;
        }
        header {
            position: sticky;
            margin: 0;
            top: 0;
            padding: 0 1em;
            background: linear-gradient(var(--gray-gradient));
            /* background: white; */
            box-shadow: 0 2px 8px rgba(var(--black), 5%);
        }
        h2 {
            margin: 0;
            font-size: 1em;
        }

        h2 a,
        h2 a.active {
            text-decoration: none;
        }
        nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        nav a {
            padding: 1em 0.5em;
            color: var(--black);
            border-bottom: 4px solid transparent;
            text-decoration: none;
        }
        nav a.active {
            text-decoration: none;
            border-bottom-color: var(--accent);
        }
        .social-links,
        .social-links a {
            display: flex;
        }
        @media (max-width: 720px) {
            .social-links {
                display: none;
            }
        }
    </style>
</header>
